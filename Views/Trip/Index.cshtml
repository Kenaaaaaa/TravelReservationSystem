@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model IEnumerable<TravelReservationSystem.Models.Trip>

@{
    ViewData["Title"] = "Lista e Udhëtimeve";
    var role = HttpContextAccessor.HttpContext?.Session.GetString("Role")?.ToLower();
}
@if (!string.IsNullOrEmpty(role))
{
    <div class="alert @(role == "admin" ? "alert-primary" : "alert-success") text-center fw-semibold shadow-sm">
        Je i loguar si <strong>@(role == "admin" ? "Admin" : "User")</strong> – mirësevjen në panelin e @(role == "admin" ? "administratorit" : "rezervimeve").
    </div>
}

@if (role == "admin")
{
    <p class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">➕ Shto Udhëtim</a>
    </p>
}


<h2 class="text-center mb-4">Lista e Udhëtimeve</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["Success"]
    </div>
}

@if (role == "Admin")
{
    <p class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">➕ Shto Udhëtim</a>
    </p>
}

@if (!Model.Any())
{
    <div class="alert alert-info text-center">Nuk ka ende udhëtime të regjistruara.</div>
}
else
{
    <table class="table table-bordered table-striped shadow-sm">
        <thead class="table-dark text-center">
            <tr>
                <th>Destinacioni</th>
                <th>Çmimi (€)</th>
                <th>Data Nisjes</th>
                <th>Veprime</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trip in Model)
            {
                <tr class="text-center align-middle">
                    <td>@trip.Destination</td>
                    <td>@trip.Price.ToString("F2")</td>
                    <td>@trip.StartDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@trip.Id" class="btn btn-outline-info btn-sm me-1">Detaje</a>

                        @if (role == "admin")
                        {
                            <a asp-action="Edit" asp-route-id="@trip.Id" class="btn btn-outline-warning btn-sm me-1">Ndrysho</a>
                            <a asp-action="Delete" asp-route-id="@trip.Id" class="btn btn-outline-danger btn-sm me-1">Fshi</a>
                        }

                        @if (role == "user")
                        {
                            <a asp-controller="Reservation" asp-action="Create" asp-route-tripId="@trip.Id" class="btn btn-outline-success btn-sm">Rezervo</a>
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
